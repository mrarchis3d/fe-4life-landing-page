---
import Footer from './Footer';
import Header from './Header';
import '../style.css';
import GoToTopButton from '@/components/GoToTopButton ';
import FloatingButton from '@/components/WhatsAppButton';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script type="text/partytown" async src="https://www.googletagmanager.com/gtag/js?id=AW-16455922869"></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'MEASUREMENT_ID');
		</script>
    <title>{title}</title>
  </head>
  <body>
    <Header client:load />
    <slot />
    <FloatingButton client:load />
    <GoToTopButton client:load />
    <Footer />
  </body>
</html>